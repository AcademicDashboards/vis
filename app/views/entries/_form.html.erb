<%= form_for(@entry) do |f| %>
	<% if @entry.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

			<ul>
			<% @entry.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>

	<div class="container">
		<div class="field column-6">
			<%= f.label :markdown %><br>
			<%= f.text_area :markdown %>
		</div>
		<div class="field column-6">
			<%= f.label :code %><br>
			<%= f.text_area :code %>
		</div>
	</div>

	<div class="field">
		<%= f.label :private %><br>
		<%= f.check_box :private %>
	</div>

	<h2>Add Data Files</h2>
	<%= link_to 'New Data +', '', id: 'new-data', remote: true %>
	<div id="data-forms" class="container">

	</div>

	<div class="actions">
		<%= f.submit 'Submit', id: 'submit-form' %>
	</div>
<% end %>